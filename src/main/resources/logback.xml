<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%-5p] [%thread] %logger{10} %m%n</pattern>
        </encoder>
    </appender>

    <logger name="com.ljt" level="DEBUG"/>

    <root level="WARN">
        <appender-ref ref="console"/>
    </root>
</configuration>