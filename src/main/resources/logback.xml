<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %p %m%n</pattern>
        </encoder>
    </appender>

    <logger name="com.ljt" level="DEBUG"/>

    <root level="DEBUG">
        <appender-ref ref="console"/>
    </root>
</configuration>